@model Ecommerce_app.Models.Products.Department

@{
    ViewData["Title"] = "Create";
}

<h3>新增產品類別</h3>
<h5 class="text-muted">Home / Departments / AddDepartment</h5>
<hr />
<div class="row mb-4">
    <div class="col-md-4">
        <form asp-action="AddDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4 mx-4">Back to List</a>
            </div>
        </form>
    </div>
</div>
        



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
