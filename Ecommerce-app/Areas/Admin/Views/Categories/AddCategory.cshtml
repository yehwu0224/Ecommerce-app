@model Ecommerce_app.Models.Products.Category

@{
    ViewData["Title"] = "Create";
}

<h3>新增產品子類別</h3>
<h5 class="text-muted mb-4">Home / Departments / AddCategory</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label"></label>
                <input type="hidden" asp-for="DepartmentId" value="@ViewData["depId"]" class="form-control" />
                <input type="text" value="@ViewData["depName"]" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4 mx-4">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
