@using Ecommerce_app.Areas.Identity.Models.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="my-5 row justify-content-center">
    <div class="col-md-4">
        <section>
            <h3 class="text-center mt-4">Login to your Account</h3>
            <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <h6 class="text-muted text-center mb-4">-------- Sign in with E-mail --------</h6>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Username" class="control-label">Email</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Password" class="control-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3 row justify-content-between">
                    <label asp-for="RememberMe" class="form-label col">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                    <a class="col text-muted text-end" id="forgot-password" href="#">Forgot password?</a>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div class="my-4">
                    <p class="text-center">
                        Not Registered Yet? <a asp-action="Register" asp-route-returnUrl="@ViewData[" ReturnUrl"]">Create an account</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
